<script>
 
 document.getElementById('bandform').addEventListener('submit',validate)
 
async function validate(e){
    e.preventDefault();

    const name = document.getElementsByName('name')[0].value;
    const offer= document.getElementsByName('offer')[0].value;
    const image = document.getElementsByName('image')[0].files[0]

    const formData = new FormData();
    formData.append('name', name);
    formData.append('offer', offer);
    formData.append('image', image);
  


    try {
    const response = await fetch("/admin/addBrand",{
              method:'post',
              body: formData
    })

    const data = await response.json();
     
     if(data.success){
          Swal.fire("Brand Added", "Brand Added Successfully","success").then(()=>{
            window.location.href = "/admin/addBrand"
          })
         
          
        } else {
          Swal.fire("Failed",data.message || "Brand already exists","error");
        }
    
      
    } catch (error) {

       Swal.fire("Failed",'Internal server error','error')
    }


 }

//  document.getElementById('editBandform').addEventListener('submit',editdata)

 async function editData(brandId,index){
  

    const name = document.getElementById('editName'+index).value;
    const offer= document.getElementById('editOffer'+index).value;
    const image = document.getElementById('editInputFile'+index).files[0]


    const formData = new FormData();
    formData.append('name', name);
    formData.append('offer', offer);
    formData.append('image', image);
  

    const response = await fetch( `/admin/addBrand/edit/${brandId}`,{
              method:'post',
  
              body: formData
    })

    const data = await response.json();
     
     if(data.success){
          Swal.fire("Success", data.message || "Brand edited Successfully","success").then(()=>{
            window.location.href = "/admin/addBrand"
          })
         
          
        } else {
          Swal.fire("Failed",data.message || "Something went wrong","error");
        }
    
  }


 

 function deleteBrand(id){

     Swal.fire({
      title:"Are you sure?",
      text:"Do you want to delete this brand?",
      icon:"question",
      showCancelButton: true,
       confirmButtonColor: '#d33',
       cancelButtonColor: '#aaa',   
       confirmButtonText: 'Yes, delete'      
     }).then(result=>{
        if(result.isConfirmed){
            window.location.href=`/admin/addBrand/delete/${id}`;
        }
     })
 }


 function viewImage(event)  {

           const input = event.target;
           const reader = new FileReader();

              reader.onload = function () {

               let dataURL = reader.result;
               let image = document.getElementById('cropImage');
                 image.src = dataURL;

               let cropContainer = image.parentNode;
                cropContainer.style.display = 'inline-block';

               if(image.cropperInstance){
                  image.cropperInstance.destroy()
               }
             

               let cropper = new Cropper(image, {
                   aspectRatio: 440/240,
                   viewMode: 1,
                   guides: true,
                   background: false,
                   autoCropArea: 0.8,
                   zoomable: true
               });
               
                image.cropperInstance = cropper;
               
                const cropBtn = document.querySelector('#cropBtn');
                const viewImage = document.getElementById('uploadImage')
              
               cropBtn.addEventListener('click',  function () {
                             
                   let croppedCanvas = cropper.getCroppedCanvas();         
                    const croppedDataURL  = croppedCanvas.toDataURL('image/jpeg', 1.0);
                   let timestamp = new Date().getTime();
                   let fileName = `cropped-img-${timestamp}.png`;
                   

                   croppedCanvas.toBlob(blob => {

                       let inputField = document.getElementById('inputFile')
                       let imgFile = new File([blob], fileName, {type: "image/png"});

                       const fileList = new DataTransfer();
                       fileList.items.add(imgFile);
                       inputField.files = fileList.files
                      cropContainer.style.display = 'none'
                       cropper.destroy();
                       image.cropperInstance = null;
                        viewImage.src = croppedDataURL;
                   } , "image/png");
                   
               });
           };
       reader.readAsDataURL(input.files[0]);
       input.value='';
   
    }

