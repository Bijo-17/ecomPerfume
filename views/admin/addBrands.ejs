<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Brands</h2>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-3">
          <form method="post" action="/admin/addBrand" enctype="multipart/form-data" id="bandform">
            <div class="mb-4">
              <label for="product_name" class="form-label">Brand Name</label>
              <input
                type="text"
                name="name"
                placeholder="Type here"
                class="form-control"
                required
              />
            </div>
             <div class="mb-4">
             <label for="product_name" class="form-label">Offer(%)</label>
              <input
                type="number"
                name="offer"
                placeholder="Type here"
                class="form-control"
              />
            </div>
            <label for="product_name" class="form-label">Brand Image</label>
            <div class="input-upload">
              <img src="" alt="" id="uploadImage"/>
              <input class="form-control border" name="image" type="file" onchange="viewImage(event)" />
            </div>
            <div class="d-grid">
              <button class="btn btn-primary mt-20" type="submit">
                Add Brand
              </button>
            </div>
          </form>
        </div>

        <!-- display band -->
       
        <div class="col-md-7 ml-105 ">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>Logo</th>
                  <th>Offer</th>
                  <th>Status</th>
                  <th>Block/Unblock/Delete</th>
                </tr>
              </thead>
              <tbody>
               
                  <% for(let i=0;i<data.length; i++){ %>
                    <tr> 
                  <td class="text-start"><%= data[i].name %></td>
                  <td class="text-start">
                    <div
                      class="d-flex align-items-center justify-content-center"
                      style="
                        width: 60px;
                        height: auto;
                        border-radius: 50%;
                        overflow: hidden;
                      "
                    >
                      <img
                        src="/uploads/images/<%= data[i].image[0]%>"
                        alt="product logo"
                        class="img-fluid rounded-circle"
                        style="width: 100%; height: auto"
                      />
                    </div>
                  </td>
                  <!--      offer -->
                 <td class = "text-start">    <%=data[i].offer ? data[i].offer +" %" : "null" %> 

                  </td>
                  <td class="text-start">
                    <%if(data[i].status !== 'active'){ %>
                    <span
                      class="badge rounded-pill alert-danger"
                      style="width: 60px"
                      >Blocked
                    </span>
                    
                     <% } else { %>
                    <span
                      class="badge rounded-pill alert-success"
                      style="width: 60px"
                      >Active</span
                    > 
                    <%}%>
                  </td>
                  <td class="text-start">
                    <%if(data[i].status == 'active'){ %>
                    <button class="btn btn-warning" style="width: 90px">
                      <a href="/admin/addBrand/block/<%= data[i]._id %>" class="text-white">Block</a>
                    </button>   
                      <% } else { %>
                    <button class="btn btn-success" style="width: 90px">
                      <a href="/admin/addBrand/unblock/<%= data[i]._id %>" class="text-white">Unblock</a> 
                    </button>
                         <%}%>


                          <!-- edit button Modal -->
                  
        

           <button type="button" class="btn btn-md btn-warning text-dark" style="width: 90px" data-bs-toggle="modal" 
            data-bs-target="#editBrandModal<%=data[i]._id%>" >
                    Edit
          </button>
                    <button
                      class="btn btn-danger"
                      style="width: 90px"
                      onclick="deleteBrand('<%=data[i]._id%>')" > 
                         Delete
                    </button>
                  </td>
                  </tr>
                             <a href="/admin/addBrand/?value=1"> value </a>
                 
                  <%}%>
                
              </tbody>
            </table>
          </div>

         
         


        </div>
      </div>  
    </div>

   

       

 
  
      
  </div>  

  
 
        <div class="pagination-container"> 

                    <nav aria-label="Page navigation">
          <ul class="pagination justify-content-center">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>
          </ul>
        </nav>
   </div>

   
        <%data.forEach((brand, index)=>{ %>
         <% console.log("Front end -brand"   , brand)  %>
        <div class="modal fade" id="editBrandModal<%=brand._id%>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form action="/admin/addBrand/edit/<%=brand._id%>" method="POST" class="modal-content" enctype="multipart/form-data">
      <div class="modal-header">
        <h5 class="modal-title">Edit Brand</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <h6>Name</h6>
        <input type="text" name="name" value="<%=brand.name%>" class="form-control" required />
      </div>

      
      <div class="modal-body">
        <h6>Offer</h6>
        <input type="text" name="offer" value="<%=brand.offer%>" class="form-control" />
      </div>

     <label for="product_name" class="form-label">Brand Image</label>
           <div class="input-upload">
            <img src="/uploads/images/<%=brand.image[0]%>" alt=""/ id="editUploadImage<%=index%>">
            <input class="form-control border" name="image" type="file" onchange="viewEditImage(event,'<%=index%>')" />
            </div>


      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </form>
  </div>
</div>

<%})%>




</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
 
 document.getElementById('bandform').addEventListener('submit',validate)
 
async function validate(e){
    e.preventDefault();

    const name = document.getElementsByName('name')[0].value;
    const offer= document.getElementsByName('offer')[0].value;
    const image = document.getElementsByName('image')[0].files[0]

    const formData = new FormData();
    formData.append('name', name);
    formData.append('offer', offer);
    formData.append('image', image);
  


    try {
    const response = await fetch("/admin/addBrand",{
              method:'post',
  
              body: formData
    })

    const data = await response.json();
     
     if(data.success){
          Swal.fire("Brand Added", "Brand Added Successfully","success").then(()=>{
            window.location.href = "/admin/addBrand"
          })
         
          
        } else {
          Swal.fire("Failed",data.message || "Brand already exists","error");
        }
    
      
    } catch (error) {

       console.log('error adding brand',error)
       Swal.fire("Failed",'Internal server error','error')
    }


 }

//  document.getElementById('editBandform').addEventListener('submit',editdata)

 function editdata(e){
  e.preventDefault()
 }

 function deleteBrand(id){

  console.log("Brand id",id)
     Swal.fire({
      title:"Are you sure?",
      text:"Do you want to delete this brand?",
      icon:"question",
      showCancelButton: true,
       confirmButtonColor: '#d33',
       cancelButtonColor: '#aaa',   
       confirmButtonText: 'Yes, delete'      
     }).then(result=>{
        if(result.isConfirmed){
            window.location.href=`/admin/addBrand/delete/${id}`;
        }
     })
 }


 function viewImage(event)  {

   const input = event.target;
   const reader = new FileReader();


   reader.onload = function () {
     const dataURL = reader.result;
       document.getElementById('uploadImage').src  = dataURL;
   } 
   reader.readAsDataURL(input.files[0]);
   
 }

  function viewEditImage(event , index)  {

   const input = event.target;
   const reader = new FileReader();


   reader.onload = function () {
     const dataURL = reader.result;
       document.getElementById('editUploadImage'+index).src  = dataURL;
   } 
   reader.readAsDataURL(input.files[0]);
   
 }

</script>



