<header>
  <div class="header-container"> 
    <nav class="header-top-nav">
      <div class="header-nav-content">
        <a href="/" class="header-brand-link">
          <h1 class="header-brand-name">PETAL & MIST</h1>
        </a>

        <div class="header-nav-icons">
          <button class="header-nav-icon" id="searchBtn"><i class="fas fa-search"></i></button>
          <a href="/wishlist"><button class="header-nav-icon"><i class="fas fa-heart"></i></button></a>
          <a href="/cart" class="p-1">
            <button class="header-nav-icon active"><i class="fas fa-shopping-bag"></i>
      
                 <span class="position-absolute top-0 start-100 translate-middle p-2 bg-danger border border-light rounded-circle">
                  <span class="visually-hidden">New alerts</span>
            </span>
        
            </button>
          </a>

          <% if (locals.user) { %>
          <div class="header-dropdown">
            <a href="/account" class="header-nav-icon"><i class="fas fa-user"></i></a>
            <div class="header-dropdown-content text-start">
              <span><%= locals.user.name %></span>
              <a href="/account">Profile</a>
              <a href="/logout">Logout</a>
            </div>
          </div>
          <% } else { %>
          <div class="header-dropdown">
            <div class="header-nav-icon" style="cursor: pointer;">
              <i class="fas fa-user"></i>
            </div>
            <div class="header-dropdown-content text-start">
              <a href="/login">Login</a>
              <a href="/register">Signup</a>
            </div>
          </div>
          <% } %>
        </div>
      </div>

      <div class="header-search-wrapper">
        <input type="text" id="searchInput" class="header-search-bar" placeholder="Search...">
        <button class="header-search-action-btn" id="searchSubmitBtn"><i class="fas fa-search"></i></button>
        <button class="header-clear-btn" id="clearSearchBtn"><i class="fas fa-times"></i></button>
      </div>
    </nav>

    <nav class="header-secondary-nav">
      <div class="header-nav-links">
        <a href="#" class="header-nav-link">Offers</a>
        <a href="#" class="header-nav-link">Category</a>
        <a href="/product/<%= encodeURIComponent('Bath and body') %>" class="header-nav-link">Bath and Body</a>
        <a href="/product" class="header-nav-link">New Arrivals</a>
      </div>
    </nav>
  </div>
</header>


