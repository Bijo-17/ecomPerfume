
<% if (breadcrumbs.length > 0) { %>
  <nav aria-label="breadcrumb" class="container">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <% breadcrumbs.forEach((crumb, index) => { %>
         <% let cleanName = decodeURIComponent( crumb.breadcrumbName.split('?')[0] ); %>
        <% if (index === breadcrumbs.length - 1) { %>
          <li class="breadcrumb-item active" aria-current="page"><%= cleanName %></li>
        <% } else { %>
          <li class="breadcrumb-item"><a href="<%= crumb.breadcrumbUrl %>"><%= cleanName %></a></li>
        <% } %>
      <% }); %>
    </ol>
  </nav>
<% } %>

