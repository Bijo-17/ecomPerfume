 
    
<head>
       
    <title>User Account Dashboard</title>
    <link rel="stylesheet" href="/css/userAccountStyles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


</head>


<body>
    <%-include("../partials/user/header")%>  

    <div class="profile-page"> 

        
    <!-- Mobile menu header (shown only on small screens) -->

    <div class="mobile-menu-header">
  <div class="left-side">
    <button id="mobileMenuToggle"><i class="fas fa-bars"></i></button>
    <div class="selected-menu-label">
      <i class="<%= active === 'account' ? 'fas fa-user-circle' :
                active === 'order' ? 'fas fa-box' :
                active === 'address' ? 'fas fa-map-marker-alt' :
                active === 'wishlist' ? 'fas fa-heart' :
                active === 'wallet' ? 'fas fa-wallet' :
                active === 'refer' ? 'fas fa-coins' :
                active === 'delete' ? 'fas fa-trash-alt' : '' %>"></i>
      <span>
        <%= active === 'account' ? 'Account' :
            active === 'order' ? 'My Orders' :
            active === 'address' ? 'Manage Address' :
            active === 'wishlist' ? 'My Wishlist' :
            active === 'wallet' ? 'Wallet' :
            active === 'refer' ? 'Refer & Earn' :
            active === 'delete' ? 'Delete Account' : '' %>
      </span>
    </div>
  </div>

  <div class="right-side user-mini">
    <img class="mini-avatar" src="<%= user?.profileImage ? user.profileImage : '/uploads/images/avatar-img.jpg' %>" alt="User Avatar" />
    <span><%= user?.name %></span>
  </div>
</div>

<%
  const profileImagePath = user?.profileImage 
    ? user.profileImage 
    : '/uploads/images/avatar-img.jpg';
%>


    <div class="container">
        <div class="sidebar collapsible-sidebar">
            <div class="profile-header">

                <div class="avatar">
                    <img src="<%= profileImagePath %>" alt="User Avatar">
                </div>
                <div class="user-info">
                    <p>Hello</p>
                    <h3><%= user?.name || 'User' %></h3>
      
                </div>
            </div>

   

            
            <nav class="sidebar-menu">
                <ul>
                    <li class="<%= active === 'account' ? 'active' : '' %>">
                        <a href="/account">
                            <i class="fas fa-user-circle"></i>
                            <span>Account </span>
                        </a>
                    </li>
                    <li class="<%= active === 'order' ? 'active' : '' %>">
                        <a href="/orders">
                            <i class="fas fa-box"></i>
                            <span>My Orders</span>
                        </a>
                    </li>
                    <li class="<%= active === 'address' ? 'active' : '' %>">
                        <a href="/address">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Manage Address</span>
                        </a>
                    </li>
                    <li class="<%= active === 'wishlist' ? 'active' : '' %>">
                        <a href="/wishlist">
                            <i class="fas fa-heart"></i>
                            <span>My Wishlist</span>
                        </a>
                    </li>
                    <li class="<%= active === 'wallet' ? 'active' : '' %>">
                        <a href="/wallet">
                            <i class="fas fa-wallet"></i>
                            <span>Wallet</span>
                        </a>
                    </li>
                       <li class="<%= active === 'refer' ? 'active' : '' %>">
                        <a href="/referandEarn">
                            <i class="fas fa-coins"></i>
                            <span>Refer & Earn</span>
                        </a>
                    </li>
                  
                    <li class="<%= active === 'delete' ? 'active' : '' %>">
                        <a href="/delete-account">
                            <i class="fas fa-trash-alt"></i>
                            <span>Delete Account</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="logout-container">
                <a href="/logout" class="logout-button">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
        
               <div class="main-content">
               <%- body %>
                   </div>
      </div>
      
    </div>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/main.js"></script>
    <% if (typeof pageScript !== 'undefined') { %>
        <script src="/js/<%= pageScript %>.js"></script>
    <% } %>
<script>
    document.addEventListener('DOMContentLoaded', function() {
    
        // Mobile menu toggle
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const sidebar = document.querySelector('.collapsible-sidebar');
        
        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener('click', function() {
                sidebar.classList.toggle('mobile-open');
            });
        }
    });


    </script>


