<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Account Dashboard</title>
    <link rel="stylesheet" href="/css/userAccountStyles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <div class="profile-header">
                <div class="avatar">
                    <img src="/images/avatar.png" alt="User Avatar">
                </div>
                <div class="user-info">
                    <p>Hello,</p>
                    <h3><%= firstName %> <%= lastName %></h3>
                </div>
            </div>
            
            <nav class="sidebar-menu">
                <ul>
                    <li class="<%= active === 'account' ? 'active' : '' %>">
                        <a href="/account">
                            <i class="fas fa-user-circle"></i>
                            <span>Account Overview</span>
                        </a>
                    </li>
                    <li class="<%= active === 'orders' ? 'active' : '' %>">
                        <a href="/orders">
                            <i class="fas fa-box"></i>
                            <span>My Orders</span>
                        </a>
                    </li>
                    <li class="<%= active === 'address' ? 'active' : '' %>">
                        <a href="/address">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Manage Address</span>
                        </a>
                    </li>
                    <li class="<%= active === 'wishlist' ? 'active' : '' %>">
                        <a href="/wishlist">
                            <i class="fas fa-heart"></i>
                            <span>My Wishlist</span>
                        </a>
                    </li>
                    <li class="<%= active === 'wallet' ? 'active' : '' %>">
                        <a href="/wallet">
                            <i class="fas fa-wallet"></i>
                            <span>Wallet</span>
                        </a>
                    </li>
                    <li class="<%= active === 'delete' ? 'active' : '' %>">
                        <a href="/delete-account">
                            <i class="fas fa-trash-alt"></i>
                            <span>Delete Account</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="logout-container">
                <a href="/logout" class="logout-button">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
        
        <div class="main-content">
            <%- body %>
        </div>
    </div>

    <script src="/js/main.js"></script>
    <% if (typeof pageScript !== 'undefined') { %>
        <script src="/js/<%= pageScript %>.js"></script>
    <% } %>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Common functionality for all pages
        
        // Mobile menu toggle
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const sidebar = document.querySelector('.sidebar');
        
        if (mobileMenuToggle) {
            mobileMenuToggle.addEventListener('click', function() {
                sidebar.classList.toggle('mobile-open');
            });
        }
    });
    </script>

</body>
</html>