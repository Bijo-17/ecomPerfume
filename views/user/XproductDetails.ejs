                  <input type="checkbox" id="<%= rating %>-star" class="rounded">
                  <label for="<%= rating %>-star" class="flex items-center gap-1 text-sm">
                    <% for(let i = 0; i < 5; i++) { %>
                      <i class="fa-<%= i < rating ? 'solid' : 'regular' %> fa-star text-<%= i < rating ? 'yellow-400' : 'gray-300' %> text-xs"></i>
                    <% } %>
                  </label>
                </div>
              <% }); %>
            </div>

            <hr class="my-6 border-gray-200">

            <div>
