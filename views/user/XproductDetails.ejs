            </div>

            <div class="text-sm text-green-600 font-medium"><%= product.delivery %></div>
          </div>

          <hr class="my-6 border-gray-200">

          <!-- Color Selection -->
          <div class="space-y-4">
            <h3 class="font-semibold text-gray-900">
              Color: <span id="selectedColorLabel"><%= product.volume[0].label %></span>
            </h3>
            <div class="flex gap-3">
              <% product.volume.forEach((quantity, index) => { %>
                <button 
                  class="color-btn w-8 h-8 rounded-full border-2 <%= index === 0 ? 'border-amber-700 scale-110' : 'border-gray-300' %> transition-all"
                  style="background-color: '<%= quantity.value %>';"
                  data-label="<%= quantity.label %>"
                ></button>
              <% }); %>
            </div>
          </div>

          <!-- Size Selection -->
          <div class="space-y-4">
            <h3 class="font-semibold text-gray-900">
              Size: <span id="selectedSizeLabel"><%= product.volume[2] %></span>
            </h3>
            <div class="flex gap-2">
              <% product.volume.forEach((quantity, index) => { %>
                <button 
                  class="size-btn flex items-center justify-center w-12 h-12 border-2 rounded-lg cursor-pointer transition-all <%= index === 2 ? 'border-amber-700 bg-amber-50 text-amber-700' : 'border-gray-300 hover:border-gray-400' %>"
                  data-size="<%= quantity %>"
                >
                  <%= quantity %>
                </button>
              <% }); %>
            </div>
          </div>

