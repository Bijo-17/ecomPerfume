                      <p class="font-medium text-gray-900"> review.name </p>
                      <div class="flex items-center gap-1">
                        <% for(let i = 0; i < 5; i++) { %>
                          <!-- <i class="fa-<= i < review?.rating ? 'solid' : 'regular' > fa-star text-<= i < review.rating ? 'yellow-400' : 'gray-300' > text-xs"></i> -->
                        <% } %>
                      </div>
