<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.title %> | Your Store</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Image selection
      const thumbnails = document.querySelectorAll('.thumbnail');
      thumbnails.forEach(thumb => {
        thumb.addEventListener('click', function() {
          const mainImage = document.getElementById('mainImage');
          mainImage.src = this.dataset.src;
          
          // Update active thumbnail
          thumbnails.forEach(t => t.classList.remove('border-amber-700'));
          thumbnails.forEach(t => t.classList.add('border-gray-200'));
          this.classList.remove('border-gray-200');
          this.classList.add('border-amber-700');
        });
      });

      // Color selection
      const colorButtons = document.querySelectorAll('.color-btn');
      colorButtons.forEach(btn => {
        btn.addEventListener('click', function() {
          const colorLabel = document.getElementById('selectedColorLabel');
          colorLabel.textContent = this.dataset.label;
          
          // Update active color
          colorButtons.forEach(b => b.classList.remove('border-amber-700', 'scale-110'));
          colorButtons.forEach(b => b.classList.add('border-gray-300'));
          this.classList.remove('border-gray-300');
          this.classList.add('border-amber-700', 'scale-110');
        });
      });

      // Size selection
      const sizeButtons = document.querySelectorAll('.size-btn');
      sizeButtons.forEach(btn => {
        btn.addEventListener('click', function() {
          const sizeLabel = document.getElementById('selectedSizeLabel');
          sizeLabel.textContent = this.dataset.size;
          
          // Update active size
          sizeButtons.forEach(b => b.classList.remove('border-amber-700', 'bg-amber-50', 'text-amber-700'));
          sizeButtons.forEach(b => b.classList.add('border-gray-300', 'hover:border-gray-400'));
          this.classList.remove('border-gray-300', 'hover:border-gray-400');
          this.classList.add('border-amber-700', 'bg-amber-50', 'text-amber-700');
        });
      });
    });
  </script>
</head>
<body class="min-h-screen bg-gray-50">
  <!-- Breadcrumb -->
  <div class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 py-3">
      <div class="text-sm text-gray-600">
        <span>Home</span> / <span>Clothing</span> / <span>Men</span> / <span>T-Shirts</span> /
        <span class="text-gray-900"><%= product.title %></span>
