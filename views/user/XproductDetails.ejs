              <button class="p-2 rounded-full bg-white/80 backdrop-blur-sm border border-gray-200">
                <i class="fa-solid fa-share text-sm"></i>
              </button>
            </div>
          </div>

          <!-- Thumbnail Images -->
          <div class="flex gap-2 overflow-x-auto">
            <% product.image.forEach((image, index) => { %>
              <button 
                class="thumbnail flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden border-2 <%= index === 0 ? 'border-amber-700' : 'border-gray-200' %>"
                data-src="<%= image %>"
              >
                <img 
                  src="<%= image %>" 
                  alt="Product image <%= index + 1 %>"
                  class="w-full h-full object-cover"    
                >
              </button>
            <% }); %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="grid grid-cols-2 gap-4">
