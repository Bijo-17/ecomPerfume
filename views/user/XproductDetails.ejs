                  <div class="w-24 h-32 bg-gradient-to-b from-<%= product.colorFrom %> to-<%= product.colorTo %> rounded-lg relative">
                    <div class="absolute top-2 left-1/2 transform -translate-x-1/2 w-4 h-6 bg-yellow-400 rounded-sm"></div>
                    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 text-<%= product.textColor %> text-xs font-bold">
