  <div class="max-w-7xl mx-auto px-4 py-6">
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Left Side - Images -->
      <div class="space-y-4">
        <div class="bg-white rounded-lg p-4">
          <div class="relative aspect-square mb-4">
            <img 
              id="mainImage"
              src="<%= product.image %>" 
              alt="<%= product.title %>"
              class="w-full h-full object-cover rounded-lg"
            >
