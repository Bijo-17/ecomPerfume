
<%-include("../partials/user/header")%>
<style> 
body {
 
  color: #fff;
}

.card.hover-effect {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card.hover-effect:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(255, 255, 255, 0.1);
}

.card-title {
  font-size: 1.1rem;
  font-weight: 600;
}

.text-success {
  color: #28a745 !important;
}
</style>

<div class="container py-5">
  <h2 class="text-center fw-bold mb-5" style="color: rgb(40, 38, 38);">Shop by Category</h2>

  <div class="row g-4 d-flex" style="justify-content: space-evenly;">
    <% categories.forEach(category => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <a href="/category/<%= category.name %>" class="text-decoration-none">
          <div class="card border-0 h-100 shadow-sm bg-dark text-white hover-effect">
            <img src="<%= category.category_image %>" class="card-img-top img-fluid" alt="<%= category.name %>" style="height: 200px; object-fit: cover;" />
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title text-center"><%= category.name %></h5>
              <% if (category.category_offer > 0) { %>
                <p class="text-center text-success fw-semibold mb-0">
                  <%= category.category_offer %>% OFF
                </p>
              <% } else { %>
                <p class="text-center mb-0" style="color: rgb(89 172 255 / 75%);">No Offer</p>
                  
              <% } %>
            </div>
          </div>
        </a>
      </div>
    <% }); %>
  </div>
</div>

<%-include("../partials/user/footer")%>