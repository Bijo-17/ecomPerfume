
<head>  <link rel="stylesheet" href="/css/orderStyle.css" > 
    <style>         
             .quantity-badge {
  display: inline-block;

  color: #333;
  padding: 2px 6px;
  margin-left: 2px;
  font-size: 14px;
  font-weight: 500;
 

}

.returnModal {
  display: none;
}
.returnModal.active {
  display: flex;
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  justify-content: center;
  align-items: center;
  z-index: 10000;
}
.returnModal .modal-content {
  background: white;
  padding: 20px;
  border-radius: 10px;
  width: 400px;
  max-width: 90%;
}
.returnModal .modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.returnModal textarea {
  width: 100%;
  padding: 10px;
  resize: none;
  margin-top: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}
.returnModal .modal-footer {
  margin-top: 15px;
  display: flex;
  justify-content: flex-end;
  gap: 10px;
}

.other-product {
  display: flex;          /* make a flex container */
  flex-direction: column; /* stack children vertically */
           /* space between each child */
}

.other-product > div {
  margin-bottom: 1rem; /* space below each block */
}

.other-product > div:last-child {
  margin-bottom: 0; /* no space after the last one */
}



                    
   </style>
 </head>

<div class="orders-content">
    <div class="orders-header">
        <h2 class="section-title">My Orders</h2>
    </div>

    <div class="orders-list" id="ordersList">
        <!-- Order  -->
         <% for(let i =0 ; i< orders.length ; i++) { %> 
               
            <% orders[i].order_items.forEach(product=> { %>
           
        <div class="order-item" data-order-id="<%=orders[i].order_id%>" data-product-id="<%= product.product_id._id %>" 
           data-volume="<%= product.volume%>" data-productOrderId="<%= product._id %>">

            <div class="order-product">
                <div class="product-image">
                    <img src="<%=product.product_id.image[0]%>" alt="product img">
                </div>
                <div class="product-details">
                    <div class="product-brand"><%=product.brand_name%></div>
                    <div class="product-name">-<%=product.product_id.product_name%></div>
                    <div class="product-rating">
                      
                     <div class="stars" style="align-items: center; ">
                        <% for(let s=1 ; s<=5;s++){ %> 
                            <%if(product.product_id.averageRating >= s) {  %>
                            <i class="fas fa-star filled"></i>
                           <%} else { %> 
                            <i class="fas fa-star"></i>
                            <% } %>
                          <%}%>
                           <span style="font-size: 0.9rem;"> (<%=product.product_id.ratingCount%>) </span>
                     </div>
                  </div>
                    <div class="product-price"><%=product.product_price%>  <span class="quantity-badge"> x <%= product.quantity%> </span></div>
                </div>
            </div>
            <div class="order-status-section">
                <div class="order-status">
                    <span class="status-label">Status :</span>
                    <span class="status-value <%=product.order_status%>"><%= product.order_status %></span>
                </div>
                <div class="order-date"> <%= orders[i].order_date.toISOString().substring(0, 10) %></div>
            </div>
        
            <div class="order-actions">
            
                    <i class="fas fa-chevron-right"></i>
               
            </div>
        </div>

         <% }) %>
     <% } %>
      

  


    </div>

    <div class="no-more-orders">
        <p>No more orders</p>
    </div>
</div>

<!-- Order Details Modal -->
<div class="modal-overlay" id="orderDetailsModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Order Details</h3>
            <button class="close-modal" id="closeOrderModal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body" id="orderModalBody">
            <!-- Order details will be populated here -->
        </div>
    </div>
</div>

<!-- Return Product Modal -->
<div class="modal-overlay returnModal" id="returnModal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Return Product</h3>
      <button class="close-modal" onclick="closeReturnModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body">
      <label for="returnReason">Why do you want to return this product?</label>
      <textarea id="returnReason" rows="4" placeholder="Enter your reason here..."></textarea>
    </div>
    <div class="modal-footer">
      <button class="action-btn btn-secondary" onclick="closeReturnModal()">Cancel</button>
      <button class="action-btn btn-primary" onclick="submitReturnReason()">Submit</button>
    </div>
  </div>
</div>

 <!-- cancel prouct modal -->
<div class="modal-overlay returnModal" id="cancelModal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Cancel Product</h3>
      <button class="close-modal" onclick="closeCancelModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body">
      <label for="returnReason">Why do you want to Cancel this product?  <br> (Optional) </label>
      <textarea id="cancelReason" rows="3" placeholder=" Enter your reason here..."></textarea>
    </div>
    <div class="modal-footer">
      <button class="action-btn btn-secondary" onclick="closeCancelModal()">Close</button>
      <button class="action-btn btn-primary" id="cancelProductBtn">Submit</button>
    </div>
  </div>
</div>

<!-- cancel full order modal  -->
<div class="modal-overlay returnModal" id="cancelFullOrderModal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Cancel Order</h3>
      <button class="close-modal" onclick="closeCancelFullOrderModal()">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body">
      <label for="returnReason">Why do you want to Cancel this Order?  <br> (Optional) </label>
      <textarea id="cancelFullOrderReason" rows="3" placeholder=" Enter your reason here..."></textarea>
    </div>
    <div class="modal-footer">
      <button class="action-btn btn-secondary" onclick="closeCancelFullOrderModal()">Close</button>
      <button class="action-btn btn-primary" id="cancelFullOrderBtn">Submit</button>
    </div>
  </div>
</div>

   <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

 <script id="order-data" type="application/json">
            <%- JSON.stringify(orders) %>
    </script>

<script src="/js/order.js"> </script>