
<%-include("../partials/user/header")%>
  <title>Offer Zone</title>
 
  <style>
    body {
      background: white;
      color: black;
      font-family: 'Segoe UI', sans-serif;
    }

    .offer-banner {
      background: black;
      color: white;
      padding: 60px 20px;
      text-align: center;
      border-bottom: 5px solid #000;
    }

    .offer-banner h1 {
      font-size: 3rem;
      font-weight: bold;
    }

    .offer-box {
      border: 2px solid black;
      padding: 20px;
      margin-bottom: 30px;
      transition: all 0.3s ease;
      background-color: white;
      position: relative;
    }

    .offer-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 15px rgba(0,0,0,0.2);
    }

    .offer-badge {
      position: absolute;
      top: -10px;
      left: -10px;
      background: black;
      color: white;
      padding: 5px 15px;
      font-size: 0.9rem;
      font-weight: 500;
    }

    .section-title {
      border-bottom: 2px solid black;
      padding-bottom: 10px;
      margin-bottom: 30px;
      font-weight: bold;
      text-transform: uppercase;
      font-size: 1.3rem;
    }

    .coupon-box {
      background: #f8f9fa;
      border: 2px dashed black;
      padding: 20px;
      text-align: center;
      transition: 0.3s ease;
    }

    .coupon-box:hover {
      background: #eaeaea;
    }
  </style>
</head>
<body>

  <div class="offer-banner">
    <h1 class="text-white">ðŸ”¥ Welcome to the Offer Zone ðŸ”¥</h1>
    <p>Get the best deals, discounts & seasonal offers</p>
  </div>

  <div class="container py-5">
    
    <!-- Section 1: Featured Offers -->
    <div class="section-title">Exclusive Deals</div>

    <div class="row g-4">
      <% if(topThree && topThree.length>0){ %> 
      <% topThree?.forEach(product=>{ %> 
      <div class="col-md-6 col-lg-4">
        <a href="productDetails/<%=product._id%>"> 
        <div class="offer-box">
          <div class="offer-badge">â‚¹<%=(product.regular_price-product.final_price).toFixed(2)%> OFF</div> 
          <img src="<%=product.image[0]%>" width="320px">
          <h5 class="mt-3"><%=product.product_name%></h5> 
          <p>
              <strong><%=product.final_price%></strong> 
               <span class="original-price">â‚¹<%=product.regular_price%></span> 
               <span class="discount"><%= Math.round(parseFloat(1 - product.final_price/product.regular_price) * 100) %>% </span>
          </p> 
        </div>
        </a>
      </div>
      <% }) %>
     <% }  else { %>
          <div class="offer-box"> <h5>NO offer available for products</h5></div>
      <% } %>
  
      <!-- <div class="col-md-6 col-lg-4">
        <div class="offer-box">
          <div class="offer-badge">â‚¹500 OFF</div>
          <h5 class="mt-3">Orders Above â‚¹2999</h5>
          <p>No coupon needed. Discount auto-applied.</p>
        </div>
      </div> -->

    </div>

    <!-- Section 2: Coupons -->
    <div class="section-title mt-5">Top Coupons</div>
    <div class="row g-4">
      <% if(coupon && coupon.length > 0) { %> 
      <%coupon.forEach(c=>{ %>
      <div class="col-md-4">
        <div class="coupon-box">
          <h6>Use Code: <strong><%=c.coupon_name%></strong></h6>
          <p>Flat <%= c.discount_type === 'fixed' ? 'â‚¹'+c.offer_price : c.offer_price+'%' %> OFF</p>
        </div>
      </div>
      <%})%>
       <% } else { %> 
      <div class="coupon-box"> <h5>No coupons available</h5></div>
        <% } %>

      <!-- <div class="col-md-4">
        <div class="coupon-box">
          <h6>Use Code: <strong>FIRST100</strong></h6>
          <p>â‚¹100 off on your first order.</p>
        </div>
      </div> -->
   
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<%-include("../partials/user/footer")%>
